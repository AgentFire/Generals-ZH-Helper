<Window x:Class="GenHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="http://www.hardcodet.net/taskbar"
        ShowInTaskbar="False" Visibility="Collapsed" ShowActivated="False" WindowStyle="None" WindowState="Minimized"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <hc:TaskbarIcon IconSource="Resources/Generals.ico" ToolTip="Generals ZH Helper">
            <hc:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Kill ZH" Click="Kill_Click" />
                    <Separator/>
                    <MenuItem Header="Quit" Click="Quit_Click" />
                </ContextMenu>
            </hc:TaskbarIcon.ContextMenu>
        </hc:TaskbarIcon>
    </Grid>
</Window>
